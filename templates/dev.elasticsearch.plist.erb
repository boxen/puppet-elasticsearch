<?xml version="1.0" encoding="UTF-8"?>

<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>dev.elasticsearch</string>

    <key>Boxen</key>
    <dict>
      <key>Description</key>
      <string>Full-text indexing and searching.</string>

      <key>Port</key>
      <integer><%= scope.lookupvar "elasticsearch::config::port" %></integer>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string><%= scope.lookupvar "elasticsearch::config::executable" %></string>
      <string>-f</string>
      <string>-D es.config=<%= scope.lookupvar "elasticsearch::config::configfile" %></string>
    </array>

    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <true />

    <key>UserName</key>
    <string><%= scope.lookupvar "::luser" %></string>

    <key>WorkingDirectory</key>
    <string><%= scope.lookupvar "elasticsearch::config::datadir" %></string>

    <key>StandardErrorPath</key>
    <string><%= scope.lookupvar "elasticsearch::config::logfile" %></string>

    <key>StandardOutPath</key>
    <string><%= scope.lookupvar "elasticsearch::config::logfile" %></string>
  </dict>
</plist>
